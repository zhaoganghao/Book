<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>cn.wtu.web.utils.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>   
    </init-param>  
  </filter>  
  <filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
  <servlet> 
    <servlet-name>InitBeanFactoryServlet</servlet-name>
    <servlet-class>cn.wtu.web.action.InitBeanFactoryServlet</servlet-class>
    <init-param>
      <param-name>configLocation</param-name> 
      <param-value>beans.properties</param-value>
    </init-param>
    <load-on-startup>0</load-on-startup>
    </servlet>
  <servlet>  
    <servlet-name>CategoryAction</servlet-name>
    <servlet-class>cn.wtu.web.action.CategoryAction</servlet-class>
  </servlet> 
  <servlet>  
    <servlet-name>BookAction</servlet-name>
    <servlet-class>cn.wtu.web.action.BookAction</servlet-class>
  </servlet> 
  <servlet>  
    <servlet-name>MessageAction</servlet-name>
    <servlet-class>cn.wtu.web.action.MessageAction</servlet-class>
  </servlet>
  <servlet>  
    <servlet-name>HistoryAction</servlet-name>
    <servlet-class>cn.wtu.web.action.HistoryAction</servlet-class>
  </servlet> 
  <servlet>  
    <servlet-name>FrontAction</servlet-name>
    <servlet-class>cn.wtu.web.action.FrontAction</servlet-class>
  </servlet> 
  <servlet>  
    <servlet-name>NewsAction</servlet-name>
    <servlet-class>cn.wtu.web.action.NewsAction</servlet-class>
  </servlet> 
  <servlet>  
    <servlet-name>UserAction</servlet-name>
    <servlet-class>cn.wtu.web.action.UserAction</servlet-class>
  </servlet> 
  <servlet>   
    <servlet-name>BorrowAction</servlet-name>
    <servlet-class>cn.wtu.web.action.BorrowAction</servlet-class>
  </servlet> 
  <servlet-mapping> 
    <servlet-name>CategoryAction</servlet-name>
    <url-pattern>/Servlet/CategoryAction</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping> 
    <servlet-name>MessageAction</servlet-name>
    <url-pattern>/Servlet/MessageAction</url-pattern>
  </servlet-mapping>
  <servlet-mapping> 
    <servlet-name>HistoryAction</servlet-name>
    <url-pattern>/Servlet/HistoryAction</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserAction</servlet-name>
    <url-pattern>/Servlet/UserAction</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BorrowAction</servlet-name>
    <url-pattern>/Servlet/BorrowAction</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NewsAction</servlet-name>
    <url-pattern>/Servlet/NewsAction</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BookAction</servlet-name>
    <url-pattern>/Servlet/BookAction</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FrontAction</servlet-name>
    <url-pattern>/Servlet/FrontAction</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>